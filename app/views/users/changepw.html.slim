- title t(".title")
#show_command
	- if @user.ingroup? "admin"
  	= link_to t("common.title.back"), :action => 'index'
	- else
  	= link_to t("common.title.back"), users_my_path()
h2
	= t('.subtitle')

= form_tag :html => { :class => 'tabular' } do
	= hidden_field_tag :user_id, params[:user_id]
	.box
		p
		  = label_tag :password, t('.password')
		  = password_field_tag :password, params[:password]
		p
		  = label_tag :password_confirmation, t('.password_again')
		  = password_field_tag :password_confirmation, params[:password_confirmation]
	= submit_tag t('common.button.change')