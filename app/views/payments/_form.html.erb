<div id="show_command">
  <%= link_to t('common.title.back'), payment_path(user) %>
</div>

<h2><%= t("payments.#{action_name}.title") %></h2>


<%= form_for [user, payment] do |f| %>
   <%= f.error_messages %>
   <%= f.hidden_field :payment_type %>
  <div class="box">
    <% if payment.payment_type == 'default' %>
      <p>
        <%= f.label :pay_start %>
        <%= f.date_select :pay_start, :order => [:year, :month, :day] %>
      </p>
      <p>
        <%= f.label :pay_finish %>
        <%= f.date_select :pay_finish, :order => [:year, :month, :day] %>
      </p>
    <% else %>
      <p>
        <%= f.label :pay_finish, t('activerecord.attributes.payment.pay_at') %>
        <%= f.date_select :pay_finish, :order => [:year, :month, :day] %>
      </p>
    <% end %>
    <p>
      <%= f.label :amount %>
      <%= f.text_field :amount %>
    </p>
    <p>
      <%= f.label :note %>
      <%= f.text_field :note %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </div>
<% end %>
