.box
  #descr
    table
      tr
        th= expense_report.class.human_attribute_name(:owner)
        td= expense_report.hrinfo.fullname
      tr
        th= expense_report.class.human_attribute_name(:target)
        td= t("activerecord.models.#{expense_report.target_type.tableize.singularize}")
      tr
        th= expense_report.class.human_attribute_name(:project)
        td= expense_report.project.name
      tr
        th= expense_report.class.human_attribute_name(:description)
        td= expense_report.description
      tr
        th= expense_report.class.human_attribute_name(:expensed_at)
