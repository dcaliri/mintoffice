<%
  if show_attachment.class.name == 'Attachment'
    attachments = [show_attachment]
  else
    attachments = Attachment.for_me(show_attachment)
  end

  at = params[:at].to_i || 0
  if @attachments && at < @attachments.count
    attachment = @attachments[at]
%>
<div id="attach">
      <img src="<%= url_for(:controller => "attachments", :action => 'picture', :id => attachment.id, :w => "600", :h => "800") %>" />
  <% end %>
      <center>
  <% if @attachments && at < @attachments.count %>
        <%= link_to t(".download"), :controller => "attachments", :action => "download", :id => attachment.id %> ...
  <% end %>
        <% if @attachments %>
          <% 0.upto(@attachments.count - 1) do |i| %>
            <% if i == params[:at].to_i %>
              <u><%= (i+1) %></u>
            <% else %>
              <%= link_to (i+1).to_s, {:at => i, :attachment_id => @attachments[i].id}, :class => "move-attachment"  %>
            <% end %>
          <% end %>
        <% end %>
      </center>
</div>

