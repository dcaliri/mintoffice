h3= "Payroll Category"
.box
  dl
    dt
      = PayrollCategory.human_attribute_name(:prtype)
      dd
        = t("payroll_categories.#{PayrollCategory::PAYROLL_TYPE.rassoc(payroll_category.prtype)[0]}")
