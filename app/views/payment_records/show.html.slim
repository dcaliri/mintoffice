#show_command
  - unless @payment_record.payment_request
    = link_to "지급청구 생성", [:payment_request, @payment_record]
    = " "

  = link_to t('common.title.edit'), [:edit, @payment_record]
  = " "
  = link_to t('common.title.destroy'), @payment_record, method: :delete, data: {confirm: t("common.messages.delete_confirm")}
  = " "
  = link_to t('common.title.list'), :payment_records

h2= t('common.title.show')

dl
  =dtdd @payment_record, "name"
