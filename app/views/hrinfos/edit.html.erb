<% @title = t('.title') %>
<div id="show_command">
<%= link_to t('common.title.show'), @hrinfo %> |
<%= link_to t('common.title.back'), hrinfos_path %>
</div>
<h2><%= t('common.title.edit') %></h2>
<%= form_for(@hrinfo, 
		:html => {:class => "tabular", :multipart => true}) do |f| %>
<div class="box">
  <%= f.error_messages %>

<% if @user.ingroup?("admin") %>
  <p>
    <%= f.label :companyno, Hrinfo.human_attribute_name('companyno') %>
    <%= f.text_field :companyno %>
  </p>
  <p>
    <%= f.label :lastname, Hrinfo.human_attribute_name('lastname') %>
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :firstname, Hrinfo.human_attribute_name('firstname') %>
    <%= f.text_field :firstname %>
  </p>
	<p>
		<%= f.label :position, Hrinfo.human_attribute_name('position') %>
    <%= f.text_field :position %>
	</p>
	<p>
		<%= f.label :joined_on, Hrinfo.human_attribute_name('joined_on') %>
    <%= f.date_select :joined_on %>
	</p>
<% end %>
	<p>
		<%= f.label :juminno, Hrinfo.human_attribute_name('juminno') %>
    <%= f.text_field :juminno %>
	</p>
	<p>
		<%= f.label :email, Hrinfo.human_attribute_name('email') %>
    <%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :address, Hrinfo.human_attribute_name('address') %>
    <%= f.text_field :address, :size => 40 %>
	</p>
	<p>
		<%= f.label :mphone, Hrinfo.human_attribute_name('mphone') %>
    <%= f.text_field :mphone %>
	</p>
<% if @user.ingroup?("admin") %>
	<p>
		<% fields_for :attachment, @attachment do |attachform| -%>
		<%= attachform.label t('hrinfos.edit.picture') %>
			<% if !@attachments.blank? %>
				<% 
					next_id = 0
					prev_id = 0
				 %>
			  <% 0.upto(@attachments.count-1) do |i| %>
				<% 
					attachment = @attachments[i]
					if i != @attachments.count-1
						next_id = @attachments[i+1].id
					else
						next_id = 0
					end
			 	%>
			  <%= attachment.id %>
			  <img src="<%= url_for(:controller => "attachments", :action => 'picture', :id => attachment.id, :w => "100", :h => "80") %>" />
			 		[<%= link_to "up", :controller => "attachments", :action => "changeseq", :id => attachment, :to => prev_id %>]
				<%= attachment.seq %>
			 		[<%= link_to "down", :controller => "attachments", :action => "changeseq", :id => attachment, :to => next_id  %>]
					[<%= link_to t('common.title.destroy'), :controller => "attachments", :action => "delete", :id => attachment%>]
					<br />
					<% 
					prev_id = attachment.id
					 %>
			  <% end %>
			<% end %>

			<%= attachform.file_field :uploaded_file %>
		<% end -%>
	</p>
<% end %>
</div>
<%= f.submit t("common.button.update") %>
<% end %>

