<% title t('.title') %>

<div id="show_command">
  <% if @cardbill.used %>
    <%#= link_to t('.to_used'), [@cardbill.used.creditcard, @cardbill.used] %>
    <%= link_to "사용 내역", [@cardbill.used.creditcard, @cardbill.used] %>
    |
  <% end %>
  <% if @cardbill.approved %>
    <%= link_to t('.to_approved'), [@cardbill.approved.creditcard, @cardbill.approved] %> |
  <% end %>
  <%= link_to t('common.title.edit'), edit_cardbill_path(@cardbill) %> |
  <%= link_to t('common.title.list'), cardbills_path %>
</div>

<h2>
  <%=h @cardbill.cardno_long %>
</h2>

<div class="box">
<div id="descr">
<span style="float:right;" class="<%= @cardbill.mismatch?(:transdate) %>">
  <%= Cardbill.human_attribute_name('transdate') %> : <%=h @cardbill.transdate.strftime("%Y.%m.%d %H:%M:%S %p") %>
</span>
<h3><%= Cardbill.human_attribute_name('totalamount') %>:<%= number_to_currency @cardbill.totalamount %></h3>

<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('amount') %>:</th>
    <td align="right" class="<%= @cardbill.mismatch?(:amount) %>"><%= number_to_currency @cardbill.amount %></td>
  </tr>
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('vat') %>:</th>
    <td align="right" class="<%= @cardbill.mismatch?(:vat) %>"><%= number_to_currency @cardbill.vat %></td>
  </tr>
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('servicecharge') %>:</th>
    <td align="right" class="<%= @cardbill.mismatch?(:servicecharge) %>"><%= number_to_currency @cardbill.servicecharge %></td>
  </tr>
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('totalamount') %>:</th>
    <td align="right" class="<%= @cardbill.mismatch?(:totalamount) %>"><%= number_to_currency @cardbill.totalamount %></td>
  </tr>
</table>

<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('storename') %>:</th>
    <td><%=h @cardbill.storename %></td>
  </tr>
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('storeaddr') %>:</th>
    <td><%=h @cardbill.storeaddr %></td>
  </tr>
  <tr>
    <th align="right"><%= Cardbill.human_attribute_name('approveno') %>:</th>
    <td><%=h @cardbill.approveno %></td>
  </tr>
</table>
<%= render 'changelog', target: @cardbill %>
</div>
<%= render "shared/attachments/detail", :target => @cardbill %>
<div style="clear: both;"></div>
</div>
