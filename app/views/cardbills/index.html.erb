<% title = t('.title') %>

<% content_for :search do -%>
  <%= form_tag :cardbills, :method => :get do %>
    <%= t("common.title.search") %> : <%= text_field_tag 'q', params[:q] %>
    <%= select_tag :creditcard_id,
      options_from_collection_for_select([Creditcard.new(:cardno => "all")]+Creditcard.all, :id, :cardno_long, params[:creditcard_id]),
      "onchange" => "this.form.submit()"
    %>
  <% end -%>
<% end -%>

<div id="show_command">
<%= link_to t('common.title.new'), new_cardbill_path %>
</div>

<h2>Total : <%= @cardbills_count %></h2>
<table id="list-table">
  <tr>
    <th><%= Cardbill.human_attribute_name('cardno') %></th>
    <th><%= Cardbill.human_attribute_name('transdate') %></th>
    <th><%= Cardbill.human_attribute_name('totalamount') %></th>
    <th><%= Cardbill.human_attribute_name('storename') %></th>
    <th><%= Cardbill.human_attribute_name('storeaddr') %></th>
    <th><%= Cardbill.human_attribute_name('approveno') %></th>
  </tr>

<% @cardbills.each do |cardbill| %>
  <tr class="selectable <%= cardbill.status %>" onclick="location.href='<%= cardbill_path(cardbill) %>'">
    <td><span><%=h cardbill.cardno_long %></span></td>
    <td><%= cardbill.transdate.strftime("%Y.%m.%d %H:%M:%S %p") %></td>
    <td class="numrow"><%= number_to_currency cardbill.totalamount %></td>
    <td><%=h cardbill.storename %></td>
    <td><%=h cardbill.storeaddr %></td>
    <td><%=h cardbill.approveno %></td>
  </tr>
<% end %>
</table>
<br />
<center>
<%= will_paginate @cardbills %>
</center>