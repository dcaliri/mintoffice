<% @title = t('.title') %>
<div id="show_command">
	<%= link_to t('common.title.show'), @cardbill %> |
	<%= link_to t('common.title.list'), cardbills_path %>
</div>
<h2><%= t("common.title.edit") %></h2>

<% form_for(@cardbill,
		:url => { :action => 'update' },
		:html => { :class => 'tabular', :multipart => true } ) do |f| %>
  <%= f.error_messages %>
<div class="box">
  <p>
    <%= f.label :cardno, Cardbill.human_attribute_name('cardno') %>
    <%= f.collection_select(:creditcard_id, @creditcards, :id, :cardno_long) %>
  </p>
  <p>
    <%= f.label :transdate, Cardbill.human_attribute_name('transdate')  %>
    <%= f.datetime_select :transdate %>
  </p>
  <p>
    <%= f.label :amount, Cardbill.human_attribute_name('amount')  %>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :vat, Cardbill.human_attribute_name('vat')  %>
    <%= f.text_field :vat %>
  </p>
  <p>
    <%= f.label :servicecharge, Cardbill.human_attribute_name('servicecharge')  %>
    <%= f.text_field :servicecharge %>
  </p>
  <p>
    <%= f.label :totalamount, Cardbill.human_attribute_name('totalamount')  %>
    <%= f.text_field :totalamount %>
  </p>
  <p>
    <%= f.label :storename, Cardbill.human_attribute_name('storename') %>
    <%= f.text_field :storename %>
  </p>
  <p>
    <%= f.label :storeaddr, Cardbill.human_attribute_name('storeaddr')  %>
    <%= f.text_field :storeaddr %>
  </p>
  <p>
    <%= f.label :approveno, Cardbill.human_attribute_name('approveno') %>
    <%= f.text_field :approveno %>
  </p>
	<p>
	<%= render :partial => "shared/edit_attachment", :object => @cardbill %>

</div>
<%= f.submit t('common.button.update') %>
<% end %>

