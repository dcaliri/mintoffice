<div id="show_command">
    <%= link_to t('common.title.back'), :taxbills %>
</div>

<% 3.downto(0).each do |quarter|%>
  <% start = current_year + (3*(quarter)).month %>
  <% finish = current_year + (3*(quarter+1)).month %>
  <% between = (start..finish) %>

  <% purchase_list = @purchases.where(transacted_at: between).group_by_name_anx_tax %>
  <% sales_list = @sales.where(transacted_at: between).group_by_name_anx_tax %>
  <% card_list = @cards.where(approved_at: between).group_by_name_anx_tax %>

  <% header = Array.new([purchase_list.size, sales_list.size, card_list.size].max) %>

  <% unless header.empty? %>
    <h3><%= t('.quarter', year: current_year.year, quarter: quarter+1)%> :
        <%= number_to_currency sales_list.sum{|sales| sales[:tax]} - (purchase_list.sum{|purchase| purchase[:tax]} + card_list.sum{|card| card[:tax]}) %>
        </h3>
    <table id="list-table">
      <thead>
        <tr>
          <th colspan="3"><%= t('.sale') %></th>
          <th colspan="3"><%= t('.purchase') %></th>
          <th colspan="2"><%= t('.card') %></th>
        </tr>
      </thead>
      <tbody>
        <% header.zip(purchase_list, sales_list, card_list).each do |_, purchase, sale, card| %>
          <tr>
            <% if sale %>
              <td>
                  <%= link_to sale[:name], taxbills_path(query: sale[:name], transacted_at: start) %> :
              </td>
              <td class="numrow">
                <%= number_to_currency sale[:tax] %>
              </td>
              <td class="numrow">
                <%= number_to_currency sale[:price] %>
              </td>
            <% else %>
              <td colspan="3"></td>
            <% end %>
            <% if purchase %>
              <td>
                <%= link_to purchase[:name], taxbills_path(query: purchase[:name], transacted_at: start) %> :
              </td>
              <td class="numrow">
                <%= number_to_currency purchase[:tax] %>
              </td>
              <td class="numrow">
                <%= number_to_currency purchase[:price] %>
              </td>
            <% else %>
              <td colspan="3"></td>
            <% end %>
            <% if card %>
              <td>
                <%= card[:name] %> :
              </td>
              <td class="numrow">
                <%= number_to_currency card[:tax] %>
              </td>
            <% else %>
              <td colspan="2"></td>
            <% end %>
          </tr>
        <% end %>
        <tr style="background-color: yellow;">

          <td>
            <%= t('common.total') %>
          </td>
          <td class="numrow">
            <%= number_to_currency sales_list.sum{|sales| sales[:tax]} %>
          </td>
          <td class="numrow">
            <%= number_to_currency sales_list.sum{|sales| sales[:price]} %>
          </td>

          <td>
            <%= t('common.total') %>
          </td>
          <td class="numrow">
            <%= number_to_currency purchase_list.sum{|purchase| purchase[:tax]} %>
          </td>
          <td class="numrow">
            <%= number_to_currency purchase_list.sum{|purchase| purchase[:price]} %>
          </td>

          <td>
            <%= t('common.total') %>
          </td>
          <td class="numrow">
            <%= number_to_currency card_list.sum{|card| card[:tax]} %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
  <p />
<% end %>

<h4><%= t('.list')%></h4>
<ul>
  <% current = Time.zone.now.year %>
  <% oldest = oldest_year %>
  <% current.downto(oldest) do |year| %>
    <% if year != current_year.year %>
      <li><%= link_to "#{year}#{t('datetime.prompts.year')}", total_taxbills_path(:at => year) %></li>
    <% else %>
      <li><%= "#{year}#{t('datetime.prompts.year')}" %></li>
    <% end %>
  <% end %>
</ul>