    p
      = f.label :foreign_country_name
      = f.text_field :foreign_country_name
    p
      = f.label :store_business_no
      = f.text_field :store_business_no
    p
      = f.label :store_name
      = f.text_field :store_name
    p
      = f.label :store_type
      = f.text_field :store_type
    p
      = f.label :store_zipcode
      = f.text_field :store_zipcode
    p
      = f.label :store_addr1
      = f.text_field :store_addr1
    p
      = f.label :store_addr2
