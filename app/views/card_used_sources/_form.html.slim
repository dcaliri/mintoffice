#show_command
  = link_to t('common.title.back'), :card_used_sources

h2= t("common.title.#{action_name}")

= form_for card_used_source do |f|
  .box
    = f.error_messages
    p
      = f.label :creditcard_id, Cardbill.human_attribute_name('cardno')
      = select_tag(:creditcard_id, options_for_select(Creditcard.all.map{|card| [card.cardno_long, card.id]}, params[:creditcard_id]))
    p
      = f.label :card_no
      = f.text_field :card_no
    p
      = f.label :bank_account
      = f.text_field :bank_account
    p
      = f.label :bank_name
      = f.text_field :bank_name
    p
      = f.label :card_holder_name
      = f.text_field :card_holder_name
    p
      = f.label :used_area
      = f.text_field :used_area
    p
      = f.label :approve_no
      = f.text_field :approve_no
    p
      = f.label :approved_at
      = f.datetime_select :approved_at, :order => [:year, :month, :day, :hour, :minute]
    p
      = f.label :approved_time
      = f.datetime_select :approved_time, :order => [:year, :month, :day, :hour, :minute]
    p
      = f.label :sales_type
      = f.text_field :sales_type
    p
      = f.label :money_krw
      = f.text_field :money_krw
    p
      = f.label :money_foreign
      = f.text_field :money_foreign
    p
      = f.label :price
      = f.text_field :price
    p
      = f.label :tax
      = f.text_field :tax
    p
      = f.label :tip
      = f.text_field :tip
    p
      = f.label :monthly_duration
      = f.text_field :monthly_duration
    p
      = f.label :exchange_krw
      = f.text_field :exchange_krw
    p
      = f.label :foreign_country_code
