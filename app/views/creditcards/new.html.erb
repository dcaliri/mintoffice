<div id="show_command">
  <%= link_to t("common.title.back"), creditcards_path %>
</div>
<h2><%= t("common.title.new") %></h2>
<%= form_for(@creditcard,
    :html => {:class => "tabular", :multipart => true}) do |f| %>
  <%= f.error_messages %>
<div class="box">
  <p>
    <%= f.label :cardno, Creditcard.human_attribute_name('cardno') %>
    <%= f.text_field :cardno %>
  </p>
  <p>
    <%= f.label :short_name, Creditcard.human_attribute_name("short_name") %>
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :expireyear, Creditcard.human_attribute_name('expireyear') %>
    <%= f.text_field :expireyear %>
  </p>
  <p>
    <%= f.label :expiremonth, Creditcard.human_attribute_name('expiremonth') %>
    <%= f.text_field :expiremonth %>
  </p>
  <p>
    <%= f.label :nickname, Creditcard.human_attribute_name('nickname') %>
    <%= f.text_field :nickname %>
  </p>
  <p>
    <%= f.label :issuer, Creditcard.human_attribute_name('issuer') %>
    <%= f.text_field :issuer %>
  </p>
  <p>
    <%= f.label :cardholder, Creditcard.human_attribute_name('cardholder') %>
    <%= f.text_field :cardholder %>
  </p>
  <p>
    <%= f.label :bank_account_id %>
    <%= f.select(:bank_account_id, options_for_select(BankAccount.all.map{|bank| [bank.name_with_number, bank.id]})) %>
  </p>
  <p>
    <%= render 'shared/attachments/form', form: f %>
  </p>
</div>
<%= f.submit t("common.button.create") %>
<% end %>

