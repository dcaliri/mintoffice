<% title t('.title')%>
<div id="show_command">
  <%= link_to t('common.title.back'), documents_path %>
</div>
<h2><%= t("common.title.new") %></h2>
<%= form_for(@namecard,
    :url => {:action => 'create'},
    :html => {:class => "tabular", :multipart => true}) do |f| %>
<div id="box">
  <%= f.error_messages %>

  <p>
    <%= f.label Namecard.human_attribute_name('name') %>
    <%= f.text_field :name %> <%= t(".name_example") %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('company') %>
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('department') %>
    <%= f.text_field :department %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('jobtitle') %>
    <%= f.text_field :jobtitle %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('phone') %>
    <%= f.text_field :phone %> <%= t(".phone_example") %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('homepage') %>
    <%= f.text_field :homepage %> <%= t(".homepage_example") %>
  </p>
  <p>
    <%= f.label Namecard.human_attribute_name('email') %>
    <%= f.text_field :email %> <%= t(".email_example") %>
  </p>
  <%= render :partial => "shared/new_attachment" %>
</div>
<%= f.submit t('common.button.create') %>
<% end %>

